#ifndef SIM7600_H_
#define SIM7600_H_

#include <stm32l4xx_hal.h>
#include <string>
#include <cstring>

using namespace std ;

class Sim7600 {
public:
	Sim7600();
	virtual ~Sim7600();
	/*=============== Variables ===============*/
	string rxData = "" ;
	bool rxDone_Flag = false ;


	/*=============== Functions ===============*/
	void IRQHandling() ;

	void memreset() ;

	bool sendATcommand ( const char *_CMD, const char *_expectedAnswer, unsigned long _timeOut ) ;

	char* getCSQ() ;

private:
	UART_HandleTypeDef *huartx ;
	UART_HandleTypeDef *huartx_toDebug ;
};

#endif /* SIM7600_H_ */
