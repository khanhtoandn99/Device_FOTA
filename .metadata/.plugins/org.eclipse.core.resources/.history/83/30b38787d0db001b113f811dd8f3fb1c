#ifndef SIM7X00_SIM7600_H_
#define SIM7X00_SIM7600_H_

class Sim7600 {
public:
	Sim7600( UART_HandleTypeDef * _huartx, UART_HandleTypeDef * _huartx_toDebug );
	virtual ~Sim7600();

	/*=============== Variables ===============*/
	char rxElement[1] ;
	char rxData [RX_DATA_MAX] ;
	unsigned int dataCount = 0;
	bool rxDone_Flag = false ;


	/*=============== Functions ===============*/
	void IRQHandling() ;

	void memreset() ;

	bool sendATcommand ( const char *_CMD, const char *_expectedAnswer, unsigned long _timeOut ) ;

	char* getCSQ() ;

private:
	UART_HandleTypeDef *huartx ;
	UART_HandleTypeDef *huartx_toDebug ;
};

#endif /* SIM7X00_SIM7600_H_ */
