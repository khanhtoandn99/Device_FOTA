#include "Terminal.h"


void terminal_irqProcess() {
	if(  rxByte2[0] == '\r' ){
		rxDone_Flag2 = 1 ;
		memset( rxByte2, 0, 1 ) ;
	}else{
		rxData2[ rxCnt2 ] = rxByte2[0] ;
		if ( rxCnt2 < RXDATA_MAX ) rxCnt2++ ;
	}
	HAL_UART_Receive_IT( &SIM_UART_DEBUG, (uint8_t*)rxByte2, 1 ) ;
}



void terminal_memreset() {
    rxCnt2 = 0 ;
    rxDone_Flag2 = 0 ;
    memset( rxData2, 0, RXDATA_MAX );
}
