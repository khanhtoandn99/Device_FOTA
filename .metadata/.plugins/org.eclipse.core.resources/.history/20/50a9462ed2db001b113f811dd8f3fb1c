#include "Sim7600.h"



Sim7600::Sim7600( UART_HandleTypeDef * _huartx ) {
	huartx = &*_huartx ;
}

Sim7600::~Sim7600() {

}

Sim7600::irqProcess() {
	if ( rxByte[0] == '\r' )
		rxDone_Flag = true ;
	else
		rxData += rxByte[0] ;

	HAL_UART_Receive_IT( huartx, (uint8_t*)rxByte, 1 ) ;
}



Sim7600::memreset() {
	rxDone_Flag = false ;
	rxByte[0] = 0 ;
	rxData.clear() ;
}
